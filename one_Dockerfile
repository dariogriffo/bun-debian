ARG DEBIAN_DIST=bookworm
FROM debian:$DEBIAN_DIST

ARG BUN_VERSION
ARG DEBIAN_DIST
ARG BUILD_VERSION
ARG FULL_VERSION

RUN mkdir -p /output/usr/lib/bun/$BUN_VERSION
COPY bun /output/usr/lib/bun/$BUN_VERSION/

RUN mkdir -p /output/DEBIAN
RUN mkdir -p /output/usr/share/doc/bun/
RUN mkdir -p /output/usr/share/man/man1/

COPY packages/one/output/DEBIAN/control /output/DEBIAN/
COPY packages/one/output/DEBIAN/postinst /output/DEBIAN/
COPY packages/one/output/DEBIAN/prerm /output/DEBIAN/
COPY packages/one/output/DEBIAN/postrm /output/DEBIAN/
RUN chmod 755 /output/DEBIAN/postinst
RUN chmod 755 /output/DEBIAN/prerm
RUN chmod 755 /output/DEBIAN/postrm

COPY packages/one/output/changelog.Debian /output/usr/share/doc/bun/changelog.Debian
COPY packages/one/output/copyright /output/usr/share/doc/bun/

RUN sed -i "s/DIST/$DEBIAN_DIST/" /output/usr/share/doc/bun/changelog.Debian
RUN sed -i "s/BUILD_VERSION/$BUILD_VERSION/" /output/usr/share/doc/bun/changelog.Debian
RUN sed -i "s/BUN_VERSION/$BUN_VERSION/" /output/usr/share/doc/bun/changelog.Debian

RUN sed -i "s/DIST/$DEBIAN_DIST/" /output/DEBIAN/control
RUN sed -i "s/BUILD_VERSION/$BUILD_VERSION/" /output/DEBIAN/control
RUN sed -i "s/BUN_VERSION/$BUN_VERSION/" /output/DEBIAN/control

RUN sed -i "s/DIST/$DEBIAN_DIST/" /output/DEBIAN/postinst
RUN sed -i "s/BUILD_VERSION/$BUILD_VERSION/" /output/DEBIAN/postinst
RUN sed -i "s/BUN_VERSION/$BUN_VERSION/" /output/DEBIAN/postinst

RUN sed -i "s/DIST/$DEBIAN_DIST/" /output/DEBIAN/prerm
RUN sed -i "s/BUILD_VERSION/$BUILD_VERSION/" /output/DEBIAN/prerm
RUN sed -i "s/BUN_VERSION/$BUN_VERSION/" /output/DEBIAN/prerm

RUN sed -i "s/DIST/$DEBIAN_DIST/" /output/DEBIAN/postrm
RUN sed -i "s/BUILD_VERSION/$BUILD_VERSION/" /output/DEBIAN/postrm
RUN sed -i "s/BUN_VERSION/$BUN_VERSION/" /output/DEBIAN/postrm

RUN dpkg-deb --build /output /bun-one_${FULL_VERSION}.deb


